@{
    ViewBag.Title = "About";
}
<head>
    <style>
        p {
            font-size: 15px;
            padding: 0px;
            margin: 0px;
        }

        .pVersion2 {
            font-size: 12px;
            padding: 0px;
            margin: 0px;
        }

        .hrVersion1 {
            padding: 0px;
            margin-left: -5px;
            margin-right: -5px;
            margin-top: 5px;
            margin-bottom: 4px;
            height: 1px;
            border: none;
            border-top: 1px dashed #808080;
        }

        .hrVersion2 {
            padding: 0px;
            margin-left: -5px;
            margin-right: -5px;
