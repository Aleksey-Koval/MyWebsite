@model IEnumerable<MyWebsite.Models.ViewModel.ProductViewModel>

@using Microsoft.AspNet.Identity

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        ViewBag.Title = "GetHeadphonesSets";
    }
</head>
<body>
    <div class="row" style="padding-top:10px;">
        @if (User.IsInRole("manager"))
        {
            <div class="col-xs-6 col-sm-4 col-md-3" style='padding: 5px;'>
                <div class="col-xs-12 panel panel-default" style="margin-bottom:0px; margin-top:0px; padding: 5px; border: solid 1px black;">
                    <div class="panel-body" style="padding: 0px;">
                        <table class="table" style="margin:0px;">
                            <tr>
                                <td style="padding: 0px; text-align: center; vertical-align: middle; border:none;">
                                    <img style="width:190px; height:190px;" src="~/Content/Images/headphones.jpg" />
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:0px; height:50px; text-align: center; vertical-align: middle; border:none;">
                                    <a class="btn btn-default btn-lg" style="width:200px;" href="/Headphones/CreateHeadphones">Добавить наушники</a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }
        @foreach (var item in Model)
        {
            <div class="col-xs-6 col-sm-4 col-md-3" style="padding: 5px;">
                <div class="col-xs-12 panel panel-default" style="margin-bottom:0px; margin-top:0px; padding: 5px; border: solid 1px black;">
                    <div class="panel-body" style="padding: 0px;">
                        <table class="table" style="margin:0px;">
                            <tr>
                                <td colspan="2" style="padding: 0px; width: 100px; height:50px; text-align: center; vertical-align: middle; border:none;">
                                    <a href="/Headphones/GetHeadphones?headphonesId=@item.Id">
                                        @Html.Raw("<img style='width:150px; height:150px;' src=\"data:image/jpeg;base64,"
                                       + Convert.ToBase64String(item.Image) + "\" />")
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" style="padding: 0px; text-align: center; vertical-align: middle; height:40px; border:none; ">
                                    <b>@Html.ActionLink(@item.Name, "GetHeadphones", new { headphonesId = @item.Id })</b>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding:0px; height:50px; text-align: center; vertical-align: middle; border:none;">
                                    <h4>@item.Price грн.</h4>
                                </td>
                                <td style="padding:0px; height:50px; text-align: center; vertical-align: middle; border:none;">
                                    @using (Html.BeginForm("AddProductToShoppingCart", "ShoppingCart", FormMethod.Post))
                                    {
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <input type="hidden" name="userID" value="@User.Identity.GetUserId()" />
                                        <button type="submit" class="btn btn-success" style="width:100px;">Купить</button>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</body>